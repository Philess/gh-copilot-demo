// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/dotnet
{
	"hostRequirements": {
		"cpus":4,
		"memory":"8gb",
		"storage":"32gb"
	},
		
	"name": "C# (.NET)",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/dotnet:0-7.0",
	"features": {
		"ghcr.io/devcontainers/features/git:1": {
			"ppa": true,
			"version": "latest"
		},
		"docker-in-docker": {
			"version": "latest",
			"moby": true,
			"dockerDashComposeVersion": "v1"
		},
		"ghcr.io/devcontainers/features/node:1": {
			"nodeGypDependencies": true,
			"version": "lts"
		},
		"ghcr.io/wxw-matt/devcontainer-features/command_runner": {
			"version": "latest"
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [3000],

	"onCreateCommand": "wget -q https://raw.githubusercontent.com/dapr/cli/master/install/install.sh -O - | bash && dapr init",

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": " cd albums-api && dotnet restore && cd ../album-viewer && npm install && cd ../albums-api dotnet dev-certs https --trust",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-dotnettools.csharp",
				"github.copilot-nightly",
				"github.copilot-chat",
				"github.copilot-labs",
				"ms-azuretools.vscode-docker",
				"github.vscode-pull-request-github",
				"redhat.vscode-yaml",
				"ms-azuretools.vscode-dapr"
			]
		}
	}

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
