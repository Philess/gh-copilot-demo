  "version": "0.2.0",
  "compounds": [
    {
      "name": "All services",
      "configurations": ["Album API", "Album Viewer"]
    }
  ],
  "configurations": [
    {
      "name": "C#: Album API Debug",
      "type": "dotnet",
      "request": "launch",
      "projectPath": "${workspaceFolder}/albums-api/albums-api.csproj"
    },
    {
      "name": "Album Viewer",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/album-viewer",
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": ["run-script", "start"],
      "preLaunchTask": "Dapr up: Album Viewer",
      "postDebugTask": "Dapr down: Album Viewer",
      "env": {
        "DAPR_HTTP_PORT": "3501",
        "DAPR_GRPC_PORT": "3101",
        "DAPR_METRICS_PORT": "9091",
        "ALBUM_API": "album-api",
        "PORT": "3000"
      },
      "console": "integratedTerminal",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "listening on port ([0-9]+)",
        "uriFormat": "http://localhost:%s"
      }
    },
